# Environment Configuration for AI Hedge Fund
# Copy this file to .env and update the values as needed

# =============================================================================
# API Configuration
# =============================================================================
API_TITLE=AI Hedge Fund API
API_DESCRIPTION=Backend API for AI Hedge Fund
API_VERSION=0.1.0
API_DEBUG=false
API_JSON_LOG_ENABLED=false
API_DOCS_URL=/docs
API_CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,https://pantheonelite.ai

# =============================================================================
# Database Configuration
# =============================================================================
# Database connection settings
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/hedge_fund
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=hedge_fund

# Database performance settings
DATABASE_ECHO=false
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_CONNECT_TIMEOUT=10
DATABASE_STATEMENT_TIMEOUT=20000
DATABASE_LOCK_TIMEOUT=10000
DATABASE_APPLICATION_NAME=vibe-trading-backend
DATABASE_USE_NULLPOOL=false

# Testing database settings
DATABASE_TESTING=false
DATABASE_TEST_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/hedge_fund_test

# =============================================================================
# LLM API Keys (Optional - for external LLM services)
# =============================================================================
# Openrouter
OPENROUTER_API_KEY=your_openrouter_key_here

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Groq
GROQ_API_KEY=your_groq_api_key_here

# Google Gemini
GOOGLE_API_KEY=your_google_api_key_here

# DeepSeek
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# GigaChat
GIGACHAT_API_KEY=your_gigachat_api_key_here
GIGACHAT_AUTH_URL=your_gigachat_auth_url_here

# xAI
XAI_API_KEY=your_xai_api_key_here

LITELLM_BASE_URL=""
LITELLM_API_KEY=your_litellm_key
# =============================================================================
# Trading Configuration
# =============================================================================
# Binance Testnet Futures Trading
BINANCE_API_KEY=your_binance_testnet_api_key_here
BINANCE_API_SECRET=your_binance_testnet_api_secret_here
BINANCE_TESTNET=true
BINANCE_BASE_URL=https://testnet.binancefuture.com
BINANCE_TIMEOUT=30
BINANCE_RECV_WINDOW=5000

# Risk Management
BINANCE_MAX_POSITION_PCT=0.2
BINANCE_MIN_CONFIDENCE_THRESHOLD=0.5
BINANCE_MAX_GROSS_EXPOSURE=1.0
BINANCE_MIN_ORDER_SIZE=10.0
BINANCE_MAX_ORDER_SIZE=100000.0
BINANCE_DEFAULT_LEVERAGE=1

# =============================================================================
# Development/Testing
# =============================================================================
# Set to true for development mode
DEBUG=false

# Logging level
LOG_LEVEL=INFO


# Twitter
X_CONSUMER_KEY=
X_CONSUMER_SECRET=
X_ACCESS_TOKEN=
X_ACCESS_TOKEN_SECRET=
X_BEARER_TOKEN=
