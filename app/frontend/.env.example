# ==============================================
# Vibe Trading - Frontend Environment Variables
# ==============================================
# Copy this file to .env and update with your values

# ==============================================
# Frontend Configuration
# ==============================================
NODE_ENV=development

# Backend API URL (used by frontend)
NEXT_API_BASE_URL=http://localhost:8000

# ==============================================
# Wallet Configuration
# ==============================================
# WalletConnect Project ID - Get from https://cloud.walletconnect.com/
NEXT_WALLETCONNECT_PROJECT_ID=your-project-id-here

# BSC Network Configuration
NEXT_BSC_RPC_URL=https://bsc-dataseed.binance.org/
NEXT_BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545/

# ==============================================
# Application Configuration
# ==============================================
NEXT_APP_NAME=Crypto Pantheon
NEXT_APP_DESCRIPTION=AI-powered hedge fund trading platform
NEXT_APP_URL=http://localhost:5173

# ==============================================
# Feature Flags
# ==============================================
# Enable/disable signup functionality (true/false)
NEXT_ENABLE_SIGNUP=false

# Enable/disable wallet connection (true/false)
NEXT_ENABLE_WALLET_CONNECTION=true

# Enable/disable trading features (true/false)
NEXT_ENABLE_TRADING=false

# Enable/disable backtesting features (true/false)
NEXT_ENABLE_BACKTESTING=false
